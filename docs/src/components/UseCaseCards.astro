---
import { Icon } from '@astrojs/starlight/components';

interface UseCase {
  title: string;
  icon: string;
  text: string;
}

const cases: UseCase[] = [
  {
    title: "Research & Science",
    icon: "open-book",
    text: "Turn your analysis into a simple, interactive application that your team or lab can use â€” no coding required."
  },
  {
    title: "Data Science & Analysis",
    icon: "puzzle",
    text: "Share dashboards with business users. Let them adjust parameters, run scenarios, and download results easily through a friendly web UI."
  },
  {
    title: "Education & Training",
    icon: "document",
    text: "Create interactive teaching materials and exercises in notebooks, then present them as easy-to-use web apps."
  },
];
---

<section class="usecase-grid">
  {cases.map((c) => (
    <div class="usecase-card">
      <div class="icon-wrapper">
        <Icon name={c.icon} class="usecase-icon" />
      </div>
      <h3>{c.title}</h3>
      <p>{c.text}</p>
    </div>
  ))}
</section>

<style>
  .usecase-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.75rem;
    margin-top: 1rem;
    margin-bottom: 2rem;

    /* rows stay consistent in height */
    align-items: stretch;
  }

  .usecase-card {
    border: 1px solid var(--sl-color-hairline);
    border-radius: 16px;
    padding: 2rem;
    background: var(--sl-color-bg);
    box-shadow: var(--sl-shadow-sm);

    /* equal-height cards */
    height: 100%;
    min-height: 260px; /* tweak this number if you want more/less height */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-align: center;
    margin-top: 0px !important;
  }

  .icon-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .usecase-icon {
    width: 56px;
    height: 56px;
    color: var(--sl-color-text-accent);
  }

  .usecase-card h3 {
    margin: 0 0 0.9rem;
    font-size: 1.2rem;
    line-height: 1.3;
  }

  .usecase-card p {
    margin: 0;
    font-size: 0.98rem;
    line-height: 1.6;
  }

  @media (max-width: 900px) {
    .usecase-grid {
      grid-template-columns: 1fr;
    }

    .usecase-card {
      min-height: auto;
      height: auto;
    }
  }
</style>
